@model E_commerce_application.Data.ViewModel.MovieVM
@using  E_commerce_application.Data
@{
    ViewData["title"] = "Create Movie";
}

<h1> Create new Movie</h1>
  
<form class="row g-3" asp-action = "Create">
      
  <div asp-validation-summary="ModelOnly"></div> 
  <div class="col-md-6">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" >
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="ImageURL" class="form-label"></label>
    <input asp-for="ImageURL" class="form-control" >
    <span asp-validation-for="ImageURL" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="Price" class="form-label"></label>
    <input asp-for="Price" class="form-control" >
    <span asp-validation-for="Price" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="MovieCategorie" class="form-label"></label>
    <select asp-for="MovieCategorie" asp-items = "Html.GetEnumSelectList<MovieCategorie>()" class="form-select">
    </select>
    <span asp-validation-for="MovieCategorie" class="text-danger"></span>
  </div>
    <div class="col-md-6">
    <label asp-for="StartDate" class="form-label"></label>
    <input asp-for="StartDate" class="form-control" >
    <span asp-validation-for="StartDate" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="EndDate" class="form-label"></label>
    <input asp-for="EndDate" class="form-control" >
    <span asp-validation-for="EndDate" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="CinemaId" class="form-label"></label>
    <select asp-for="CinemaId" asp-items = "ViewBag.CinemaId" class="form-select">

    </select>
    <span asp-validation-for="CinemaId" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="ProducerId" class="form-label"></label>
    <select asp-for="ProducerId" asp-items = "ViewBag.ProducerId" class="form-select">
    </select>
    <span asp-validation-for="ProducerId" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="ActorsId" class="form-label"></label>
    <select asp-for="ActorsId" asp-items = "ViewBag.ActorId" class="form-select" multiple>
    </select>
    <span asp-validation-for="ActorsId" class="text-danger"></span>
  </div>
   <div class="col-md-12">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-select">
    </textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>




  <div class="form-group">
    <a class = "btn btn-outline-secondary" asp-action  = "Index"> show all</a>
    <button type="submit" class="btn btn-primary float-end">Confirm</button>
  </div>
</form>



